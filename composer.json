{
    "name": "bgsu-lits/framework-database",
    "description": "Database for LITS Framework.",
    "license": "MIT",
    "authors": [
        {
            "name": "John Kloor",
            "email": "kloor@bgsu.edu"
        }
    ],
    "require": {
        "php": "^7.4",
        "ext-PDO": "*",
        "bgsu-lits/framework": "^1.7.0",
        "latitude/latitude": "^4.2",
        "lulco/phoenix": "^1.10",
        "pagerfanta/pagerfanta": "^3.5",
        "phpoffice/phpspreadsheet": "^1.20"
    },
    "require-dev": {
        "bamarni/composer-bin-plugin": "^1.3",
        "neronmoon/scriptsdev": "^0.1.9",
        "phpunit/phpunit": "^9",
        "roave/security-advisories": "dev-master"
    },
    "config": {
        "sort-packages": true
    },
    "extra": {
        "scripts-dev": {
            "phpcbf": "phpcbf ./ --standard=phpcs.xml",
            "phpcs": "phpcs ./ --standard=phpcs.xml",
            "phplint": "phplint ./ --exclude=vendor",
            "phpstan": "phpstan analyse -c phpstan.neon",
            "phpunit": "phpunit -c phpunit.xml",
            "post-install-cmd": [
                "@composer bin all install --ansi"
            ],
            "post-update-cmd": [
                "@composer bin all update --ansi"
            ],
            "psalm": "psalm --config=psalm.xml",
            "test": [
                "@phplint",
                "@phpcs",
                "@phpstan",
                "@psalm",
                "@phpunit"
            ]
        }
    },
    "autoload": {
        "psr-4": {
            "Lits\\": "src/Lits"
        },
        "exclude-from-classmap": [
            "/src/Lits/Test/"
        ]
    }
}
